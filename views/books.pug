extends layout

block content
    h1 Books
    p
      a.button(href='/new_book') Create New Book
    p
      | Filters
      a(href='all_books.html')  All |
      a(href='overdue_books.html') Overdue |
      a(href='checked_books.html') Checked Out  
    table
      thead
        tr
          th Id
          th Title
          th Author
          th Genre
          th Year Released
      tbody
        each book in books
          tr
            td #{book.id}
            td
              //- a(href='/book_detail') #{book.title}
              a(href='/book_detail/' + book.id) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.first_published}
