extends ../layout

block content
    include ../includes/book_nav
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released
      tbody
        each book in books
          tr
            td
              a(href='/books/' + book.Book.id) #{book.Book.title}
            td #{book.Book.author}
            td #{book.Book.genre}
            td #{book.Book.first_published}
    include ../includes/page_nav      
