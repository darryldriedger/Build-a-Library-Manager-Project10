extends ../layout

block content
    h1 Books
    include ../includes/book_nav 
    table
      thead
        tr
          th Id
          th Title
          th Author
          th Genre
          th Year Released
      tbody
        each book in books
          tr
            td #{book.id}
            td
              a(href='/books/' + book.id) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.first_published}
          
